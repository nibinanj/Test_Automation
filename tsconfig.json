{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "outDir": "dist",
    "types": ["node", "playwright"]
  },
  "include": [
    "tests",
    "Pages",
    "Utils",
    "playwright.config.ts"
  ]
}